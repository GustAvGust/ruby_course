<h1><%= @list.header %></h1>
<%= link_to 'New task', new_list_task_path %>

<hr>
<table>
  <tr>
    <th>Header</th>
    <th>Description</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.header %></td>
      <td><%= task.description %></td>
      <td><%= link_to 'Show', list_task_path(@list, task) %></td>
      <td><%= link_to 'Edit', edit_list_task_path(@list, task) %></td>
      <td><%= link_to 'Destroy', list_task_path(@list, task),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', lists_path %>